<div class="register-container">
  <form action="/user/register" method="POST">
    <div class="form-group">
      <label for="name" class="input-color">Nome</label>
      <input
        type="text"
        name="name"
        class="form-control"
        aria-describedby="nameHelp"
        placeholder="Insira seu nome"
      />
    </div>
    <div class="form-group">
      <label for="surname" class="input-color">Sobrenome</label>
      <input
        type="text"
        name="surname"
        class="form-control"
        aria-describedby="surnameHelp"
        placeholder="Insira seu sobrenome"
      />
    </div>
    <div class="form-group">
      <label for="address" class="input-color">EndereÃ§o</label>
      <input
        type="text"
