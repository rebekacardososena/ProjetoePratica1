<h1>Perfil do Usuário</h1>
<section class="user-profile">
  <div class="container py-5">
    <div class="row">
      <div class="col">
        <nav aria-label="breadcrumb" class="bg-light rounded-3 p-3 mb-4">
          <ol class="breadcrumb mb-0">
            <li class="breadcrumb-item"><a href="#">Home</a></li>
            <li class="breadcrumb-item"><a href="#">User</a></li>
            <li class="breadcrumb-item active" aria-current="page">User Profile</li>
          </ol>
        </nav>
      </div>
    </div>

    <div class="row">
      <div class="col-lg-4">
        <div class="card mb-4 shadow-sm">
          <div class="card-body text-center">
            <img
              src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-chat/ava3.webp"
              alt="avatar"
              class="rounded-circle img-fluid"
              style="width: 150px;"
            />
            <h5 class="my-3">{{info.0.userName}}</h5>
            <p class="text-muted mb-1">Full Stack Developer</p>
            <p class="text-muted mb-4">Itabuna, BA</p>
            <div class="d-flex justify-content-center mb-2">
              <button type="button" class="btn btn-primary">Seguir</button>
              <button
                type="button"
                class="btn btn-outline-primary ms-1"
              >Mensagem</button>
            </div>
          </div>
        </div>
      </div>

      <div class="col-lg-8">
        <div class="card mb-4 shadow-sm">
          <div class="card-body profile">
            <div class="row">
              <div class="col-sm-3"><p class="mb-0">Nome</p></div>
              <div class="col-sm-9"><p
                  class="text-muted mb-0"
                >{{info.0.userName}}</p></div>
            </div>
            <hr />
            <div class="row">
              <div class="col-sm-3"><p class="mb-0">Sobrenome</p></div>
              <div class="col-sm-9"><p
                  class="text-muted mb-0"
                >{{info.0.userSurname}}</p></div>
            </div>
            <hr />
            <div class="row">
              <div class="col-sm-3"><p class="mb-0">Email</p></div>
              <div class="col-sm-9"><p
                  class="text-muted mb-0"
                >{{info.0.userEmail}}</p></div>
            </div>
            <hr />
            <div class="row">
              <div class="col-sm-3"><p class="mb-0">Telefone</p></div>
              <div class="col-sm-9"><p class="text-muted mb-0">(73) 3211-6766</p></div>
            </div>
            <hr />
            <div class="row">
              <div class="col-sm-3"><p class="mb-0">Celular</p></div>
              <div class="col-sm-9"><p class="text-muted mb-0">(73) 98862-0127</p></div>
            </div>
            <hr />
            <div class="row">
              <div class="col-sm-3"><p class="mb-0">Endereço</p></div>
              <div class="col-sm-9"><p
                  class="text-muted mb-0"
                >{{info.0.userAddress}}</p></div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<h2>Interesses</h2>

<div class="seccao-games">
  {{#each info}}
    <div class="card perfil-interesse shadow-sm">
      <img src="{{jogosImg}}" class="card-img-top" alt="{{jogosNome}}" />
      <div class="card-body">
        <h5 class="card-title">{{jogosNome}}</h5>
      </div>
      <ul class="list-group list-group-flush">
        <li class="list-group-item"><strong>Categoria</strong>:
          {{jogosCategories}}</li>
        <li class="list-group-item"><strong>Tipo</strong>: {{jogosTipo}}</li>
        <li class="list-group-item"><strong>Desenvolvedora</strong>:
          {{jogosDesenvolvedora}}</li>
      </ul>
    </div>
  {{/each}}
</div>